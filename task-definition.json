{
  "family": "badminton-tournament-api-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::553262996745:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::553262996745:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "badminton-tournament-api",
      "image": "PLACEHOLDER",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:553262996745:secret:badminton-api/DATABASE_URL"
        },
        {
          "name": "DIRECT_URL",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:553262996745:secret:badminton-api/DIRECT_URL"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:553262996745:secret:badminton-api/JWT_SECRET"
        },
        {
          "name": "ADMIN_ID",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:553262996745:secret:badminton-api/ADMIN_ID"
        },
        {
          "name": "ADMIN_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:553262996745:secret:badminton-api/ADMIN_PASSWORD"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/badminton-tournament-api",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "wget --no-verbose --tries=1 --spider http://localhost:3000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
